<body>
  <form action="/food/display_by_id" method="get">
    <div class="root">
      <div class="box_edit">
        <div class="title_box">
          <div class="inner_box">
            <img src="/images/logo.png" style="width: 100px" />
            <div class="title_text text_box">EDIT FOOD</div>
          </div>

          <div style="margin-left: auto">
            <img src="/images/meal.png" style="width: 70px" />
          </div>
        </div>

        <div class="container" style="margin-top: 20px;">
          <div required class="col-sm-12">
            <input required type="text" class="form-control" name="foodid" placeholder="Food Id You Want to Edit..." />
          </div>
        </div>

        <div class="row" style="margin-top: 30px">
          <div class="col-sm-12 stylecenter">
            <button type="submit" class="btn btn-danger" style="color: yellow; width:40%;">Submit</button>
          </div>
        </div>

        <div class="row" style="margin-top: 30px">
          <div class="col-sm-12 stylecenter">
            <h3 style="color: green;">
              <%=message %>
            </h3>
          </div>
        </div>
      </div>
    </div>
    </div>
  </form>
</body>

